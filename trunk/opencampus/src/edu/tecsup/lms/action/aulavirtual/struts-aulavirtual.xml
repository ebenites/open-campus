		<action name="ConfigurarGuardarPesos" method="guardarPesos" class="edu.tecsup.lms.action.aulavirtual.GestionarAulaVirtualAction">
			<interceptor-ref name="responsable-aula-virtual"></interceptor-ref>
		</action>	
		
		<action name="ConfigurarGuardarPesos" method="guardarPesos" class="edu.tecsup.lms.action.aulavirtual.GestionarAulaVirtualAction">
