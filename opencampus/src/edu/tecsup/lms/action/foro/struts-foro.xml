<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="campus-foro-administrador" extends="campus-default" namespace="/admin/foro">
		
		<action name="Cargar" method="cargar" class="edu.tecsup.lms.action.foro.GestionarForoAction">
			<result name="success">/admin/foro/admin_foro.jsp</result>
			<interceptor-ref name="administrador-campus"></interceptor-ref>
		</action>
		
		<action name="Crear" method="crear" class="edu.tecsup.lms.action.foro.GestionarForoAction">
			<result name="success" type="redirect-action">Cargar</result>
			<interceptor-ref name="administrador-campus"></interceptor-ref>
		</action>
		
		<action name="Modificar" method="modificar" class="edu.tecsup.lms.action.foro.GestionarForoAction">
			<result name="success" type="redirect-action">Cargar</result>
			<interceptor-ref name="administrador-campus"></interceptor-ref>
		</action>
		
		<action name="Eliminar" method="eliminar" class="edu.tecsup.lms.action.foro.GestionarForoAction">
			<result name="success" type="redirect-action">Cargar</result>
			<interceptor-ref name="administrador-campus"></interceptor-ref>
		</action>
		
		<action name="ObtenerForo" method="obtenerForo" class="edu.tecsup.lms.action.foro.GestionarForoAction">
			<interceptor-ref name="administrador-campus"></interceptor-ref>
		</action>
		
		<action name="ListarCandidatos" method="listarCandidatos" class="edu.tecsup.lms.action.foro.GestionarForoAction">
			<interceptor-ref name="administrador-campus"></interceptor-ref>
		</action>
		
		<action name="CambiarEstado" method="cambiarEstado" class="edu.tecsup.lms.action.foro.GestionarForoAction">
			<interceptor-ref name="administrador-campus"></interceptor-ref>
		</action>
		
		<action name="CambiarCerrado" method="cambiarCerrado" class="edu.tecsup.lms.action.foro.GestionarForoAction">
			<interceptor-ref name="administrador-campus"></interceptor-ref>
		</action>
		
	</package>
	
	<package name="campus-foro" extends="campus-default" namespace="/foro">
	
		<action name="CargarPortada" method="cargarPortada" class="edu.tecsup.lms.action.foro.ForoAction">
			<result name="success">/comun/portal/servicio_foros.jsp</result>
			<interceptor-ref name="usuario-campus"></interceptor-ref>
		</action>
	
		<action name="Buscar" method="buscar" class="edu.tecsup.lms.action.foro.ForoAction">
			<result name="success">/comun/foro/foro_buscar.jsp</result>
			<interceptor-ref name="usuario-campus"></interceptor-ref>
		</action>
		
		<action name="BuscarUsuarios" method="buscarUsuarios" class="edu.tecsup.lms.action.foro.ForoAction">
			<interceptor-ref name="usuario-campus"></interceptor-ref>
		</action>
	
		<action name="Foro" method="foros" class="edu.tecsup.lms.action.foro.ForoAction">
			<result name="success">/comun/foro/foro_user.jsp</result>
			<interceptor-ref name="usuario-campus"></interceptor-ref>
		</action>
		
		<action name="IngresarForo" method="temas" class="edu.tecsup.lms.action.foro.ForoAction">
			<result name="success">/comun/foro/foro_temas.jsp</result>
			<interceptor-ref name="usuario-campus"></interceptor-ref>
		</action>
		
		<action name="IngresarTema" method="mensajes" class="edu.tecsup.lms.action.foro.ForoAction">
			<result name="success">/comun/foro/foro_mensajes.jsp</result>
			<interceptor-ref name="usuario-campus"></interceptor-ref>
		</action>
		
		<action name="NuevoTema" method="nuevoTema" class="edu.tecsup.lms.action.foro.ForoAction">
			<result name="success" type="redirect-action">IngresarForo?idForo=${idForo}</result>
			<interceptor-ref name="usuario-campus"></interceptor-ref>
		</action>
		
		<action name="NuevoMensaje" method="nuevoMensaje" class="edu.tecsup.lms.action.foro.ForoAction">
			<result name="success" type="redirect-action">IngresarTema?idTema=${idTema}&amp;pagActual=${pagActual}</result>
			<interceptor-ref name="usuario-campus"></interceptor-ref>
		</action>
		
		<action name="Calificar" method="calificar" class="edu.tecsup.lms.action.foro.ForoAction">			
			<interceptor-ref name="usuario-campus"></interceptor-ref>
		</action>
		
		<action name="CambiarEstado" method="cambiarEstado" class="edu.tecsup.lms.action.foro.ForoAction">			
			<interceptor-ref name="usuario-campus"></interceptor-ref>
		</action>
		
		<action name="EliminarTema" method="eliminarTema" class="edu.tecsup.lms.action.foro.ForoAction">
			<interceptor-ref name="usuario-campus"></interceptor-ref>
		</action>
		
		<action name="EliminarMensaje" method="eliminarMensaje" class="edu.tecsup.lms.action.foro.ForoAction">
			<interceptor-ref name="usuario-campus"></interceptor-ref>
		</action>
		
	</package>

</struts>